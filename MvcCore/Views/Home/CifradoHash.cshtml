
@{
    ViewData["Title"] = "CifradoHash";
}

<h1>Cifrado Hash</h1>
<form method="post">
    <label>Contenido  a cifrar : </label>
    <input type="text" name="contenido" required class="form-control" /><br />
    <label>Resultado</label>
    <textarea rows="5" class="form-control" name="resultado">@ViewData["RESULTADO"]</textarea><br />
    <button class="btn btn-info" name="accion" value="cifrar">Cifrar contenido</button>
    <button class="btn btn-danger" name="accion" value="comparar">Comparar contenido</button>
</form>
@Html.Raw(ViewData["MENSAJE"])
