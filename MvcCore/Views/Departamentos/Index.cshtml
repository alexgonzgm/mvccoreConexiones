@model IEnumerable<MvcCore.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="SeleccionMultiple" asp-controller="Departamentos">Seleccion multiple</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { iddepartamento = item.IdDepartamento }) |
                @Html.ActionLink("Details", "Details", new { iddepartamento = item.IdDepartamento }) |
                @Html.ActionLink("Delete", "Delete", new { iddepartamento = item.IdDepartamento })
            </td>
        </tr>
}
    </tbody>
</table>
